<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@drawable/cam_7"
              android:layout_margin="16dp">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:width="7dp"
        android:height="7dp"
        android:onClick="sendButton"
        android:paddingTop="5dp"
        android:text="Send"
       />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/riddle_title_label"/>

    <EditText
        android:id="@+id/riddle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/riddle_title_hint"/>

     <EditText
          android:id="@+id/riddle_field"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Riddle For You!"
          android:padding="100dp"/>

   <!-- <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/riddle_details_label"/>

    <Button
        android:id="@+id/crime_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/> -->

    <CheckBox
        android:id="@+id/riddle_solved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/riddle_used_label"/>


</LinearLayout>

